<div class="container">
    <div class="jumbotron">
        <h1 id="header">Eat-Da-Burger!</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="waiting-container">
                <h3>Ready to Eat</h3>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless devoured}}
                </ul>
                <form id="devour-form">
                    <li class="form-control">
                        {{id}}. {{burger_name}}
                    </li>
                    <button class="btn btn-success devour-btn" data-id="{{id}}" type="submit">Devour It!</button>
                </form>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="devoured-container">
                <h3>Devoured</h3>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                </ul>
                <form action="/api/burgers/{{id}}" id="devoured-form">
                    <li class="form-control devoured">
                        {{id}}. {{burger_name}}
                    </li>
                </form>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form class="create-form">
                <div class="form-group">
                    <textarea class="form-control input-sm" id="burger-create"></textarea>
                </div>
                <button class="btn btn-success" id="create-btn" type="submit">Submit Burger</button>
            </form>
        </div>
    </div>
</div>